<header class="et-header-wrapper">
  <div class="et-header">

    <div class="logo">
      <img src="{{logo.resource.rawUrl}}" alt="" class="src">
      <div class="names">
        <div class="name">{{variables.name.value}}</div>
        <div class="sub_name">{{variables.sub_name.value}}
        </div>
      </div>
    </div>
    <div class="actions">

      <div class="menu">
        {{#each header.menu}}
        <a href="{{path}}" class="menu-item {{key}} {{#if selected}}selected{{/if}}">{{text}}</a>
        {{/each}}
      </div>
      <div class="language">
        <a class="cn">中文</a>
        <span>/</span>
        <a class="en">EN</a>
      </div>
    </div>

    <div id="back-to-top">
      {{header.toTop}}
    </div>

</header>
</div>
<script>
  $(".et-header .language .cn").on("click", setLang.bind(null, "cn"))
  $(".et-header .language .en").on("click", setLang.bind(null, "en"))
  $(`.et-header .language .${getLang()}`).addClass("selected")


  $(function () {
    //当滚动条的位置处于距顶部100像素以下时，跳转链接出现，否则消失
    $(function () {
      $(window).scroll(function () {
        if ($(window).scrollTop() > 100) {
          $("#back-to-top").fadeIn(500);
        }
        else {
          $("#back-to-top").fadeOut(500);
        }
      });

      //当点击跳转链接后，回到页面顶部位置
      $("#back-to-top").click(function () {
        //$('body,html').animate({scrollTop:0},1000);
        if ($('html').scrollTop()) {
          $('html').animate({ scrollTop: 0 }, 800);
          return false;
        }
        $('body').animate({ scrollTop: 0 }, 800);
        return false;
      });
    });
  });
</script>