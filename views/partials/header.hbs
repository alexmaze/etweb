<header class="et-header">
  <div class="logo">
    <img src="/logo.png" alt="" class="src">
    <div class="names">
      <div class="name">{{variables.name.value}}</div>
      <div class="sub_name">{{variables.sub_name.value}}
      </div>
    </div>
  </div>
  <div class="actions">

    <div class="menu">
      {{#each header.menu}}
      <a href="{{path}}" class="menu-item {{key}} {{#if selected}}selected{{/if}}">{{text}}</a>
      {{/each}}
    </div>
    <div class="language">
      <a class="cn">中文</a>
      <span>/</span>
      <a class="en">EN</a>
    </div>
  </div>
</header>
<script>
  $(".et-header .language .cn").on("click", setLang.bind(null, "cn"))
  $(".et-header .language .en").on("click", setLang.bind(null, "en"))
  $(`.et-header .language .${getLang()}`).addClass("selected")
</script>