<header class="et-header">
  <div class="logo">
    <img src="/logo.png" alt="" class="src">
    <div class="names">
      <div class="name">{{variables.name.value}}</div>
      <div class="sub_name">{{variables.sub_name.value}}
      </div>
    </div>
  </div>
  <div class="actions">

    <div class="menu">
      <a class="menu-item index">首页</a>
      <a class="menu-item about">关于我们</a>
      <a class="menu-item product">产品中心</a>
      <a class="menu-item look">制造实力</a>
      <a class="menu-item news">新闻资讯</a>
      <a class="menu-item jobs">加入我们</a>
      <a class="menu-item contact">联系我们</a>
    </div>
    <div class="language">
      <a class="cn">中文</a>
      <span>/</span>
      <a class="en">EN</a>
    </div>
  </div>
</header>
<script>
  (() => {
    $(".et-header .language .cn").on("click", setLang.bind(null, "cn"))
    $(".et-header .language .en").on("click", setLang.bind(null, "en"))
    $(`.et-header .language .${getLang()}`).addClass("selected")
    $(`.et-header .menu .menu-item.${getLocation()}`).addClass("selected")
  })()
</script>