<footer class="et-footer">
  <div class="main">

    <div class="menu">
      {{#each footer.menu}}

      <div class="menu-item {{key}}">
        <a href="{{path}}" class="title">{{text}}</a>
        <div class="sub-items">
          {{#each items}}
          <a class="sub-item">{{text}}</a>
          {{/each}}
        </div>
      </div>

      {{/each}}
    </div>

    <figure class="qrcode">
      <img src="{{variables.wechat_qrcode.resource.rawUrl}}" alt="">
      <figcaption>{{footer.wechat}}</figcaption>
    </figure>
  </div>

</footer>