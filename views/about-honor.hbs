<!DOCTYPE html>
<html lang="{{lang}}">

<head>
  {{> base}}
  <title>{{title}}</title>

  <link rel="stylesheet" type="text/css" href="/css/about.css" />

</head>

<body>
  {{> header}}

  <main class="page-about">
    <div class="inner-wrapper">
      <nav class="about-menu">
        <div class="title">{{menu_title}}</div>
        {{#each menu}}
        <a href="{{href}}" class="{{#if selected}}selected{{/if}}">{{title}}</a>
        {{/each}}
      </nav>
      <article class="about-content">
        <h1 class="with-color-tag">{{honor.title}}</h1>

        <div class="honors">
          {{#each honor.items}}
          <div class="honor-item" style="background-image: url({{resource.rawUrl}})">
            <div class="title">{{title}}</div>
          </div>
          {{/each}}
        </div>
      </article>
    </div>
  </main>

  {{> footer}}
</body>

</html>